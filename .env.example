# Reddit API (Official - recommended)
# Create an app at https://www.reddit.com/prefs/apps
# Choose "script" type, use http://localhost:8080 as redirect URI
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=grepr:v1.0 (by /u/your_username)

# AI Provider: "groq", "deepseek", or "local" (LM Studio)
AI_PROVIDER=local

# Groq API (cloud - 100k tokens/day free)
# Get key from https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# DeepSeek API (cloud - very cheap: $0.28/1M input, $0.42/1M output)
# Get key from https://platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Local LM Studio (FREE - no API key needed)
# Download from https://lmstudio.ai and load a model
LOCAL_BASE_URL=http://localhost:1234/v1
LOCAL_MODEL=deepseek

# NocoDB Configuration
# For production, use HTTPS behind a reverse proxy: https://nocodb.yourdomain.com
NOCODB_BASE_URL=http://localhost:8080
NOCODB_API_TOKEN=your_nocodb_api_token_here
NOCODB_TABLE_ID=your_table_id_here
